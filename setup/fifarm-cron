SHELL=/bin/bash
PATH=/usr/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
BASED_DIR=${HOME}/fi_farm
LOG_DIR=${BASE_DIR}/logs

# keep alive
* * * * *    root date > ${LOG_DIR}/keep-alive.log

# take picture
*/20 * * * *    root /bin/bash ${BASE_DIR}/scripts/take_picture.sh 2>&1 >> ${LOG_DIR}/take_picture.log

# upload datas
2    * * * *    root /bin/bash ${BASE_DIR}/scripts/uploader.sh 2>&1 >> ${LOG_DIR}/uploader.log
